{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2021",
        "sourceMap": true,
        "incremental": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "baseUrl": "./",
        "rootDir": "src",
    },
    "parserOptions": {
        "extraFileExtensions": [
            ".ts",
            ".tsx"
        ],
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}